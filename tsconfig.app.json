{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping for shadcn/ui */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "src/components/dashboard/Dashboard.tsx",
    "src/components/dashboard/DashboardV3.tsx", 
    "src/components/dashboard/DashboardV3Fixed.tsx",
    "src/components/DemoUIV3.tsx",
    "src/components/quiz/DiagramCompletionMode.tsx",
    "src/components/quiz/FeedbackModal.tsx",
    "src/components/quiz/FeedbackModalV3.tsx",
    "src/components/quiz/QROCWritingMode.tsx",
    "src/components/quiz/QuestionCard.tsx",
    "src/components/QuizSessionV2.tsx",
    "src/hooks/useAchievements.ts",
    "src/hooks/useQuizSession.ts",
    "src/hooks/useUserStats.ts",
    "src/services/courseReferenceEngine.ts",
    "src/services/moduleRecommendationEngine.ts",
    "src/services/questionGeneratorV2.ts",
    "src/services/variantGenerator.ts"
  ]
}
